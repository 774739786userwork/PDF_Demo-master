<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="false"
        android:id="@+id/rl_top"
        android:background="#097ce0">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/about_showleft_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设备类型"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/saveText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/choiceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择设备签名类型"
            android:textSize="@dimen/f36sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft = "60dp"
        android:layout_marginRight = "40dp"
        android:padding="4dp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/compact_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/checkbox_selector"
            android:drawablePadding="10dp"
            android:button="@null"
            android:background="@null"
            android:textColor="#000"
            android:text="合同"
            android:layout_weight="1"
            android:checked="false"></CheckBox>
        <CheckBox
            android:id="@+id/charge_check"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:drawableLeft="@drawable/checkbox_selector"
            android:drawablePadding="10dp"
            android:button="@null"
            android:background="@null"
            android:textColor="#000"
            android:text="收费"
            android:layout_weight="1"
            android:checked="false"></CheckBox>

        <CheckBox
            android:id="@+id/balance_check"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:drawableLeft="@drawable/checkbox_selector"
            android:drawablePadding="10dp"
            android:button="@null"
            android:background="@null"
            android:textColor="#000"
            android:text="结算"
            android:layout_weight="1"
            android:checked="false"></CheckBox>

        <CheckBox
            android:id="@+id/sign_check"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:drawableLeft="@drawable/checkbox_selector"
            android:drawablePadding="10dp"
            android:button="@null"
            android:background="@null"
            android:textColor="#000"
            android:text="签名"
            android:layout_weight="1"
            android:checked="false"></CheckBox>
    </LinearLayout>
</LinearLayout>

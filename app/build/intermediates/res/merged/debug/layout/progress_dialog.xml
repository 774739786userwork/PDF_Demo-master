<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="300dp">
	<LinearLayout
		android:id="@+id/ll_common_dialog"
		android:layout_width="260dp"
		android:layout_height="230dp"
		android:layout_centerInParent="true"
		android:orientation="vertical"
		android:background="@drawable/bg_c13939_corners_30">

		<TextView
			android:id="@+id/tv_dialog_common_msg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="45dp"
			android:layout_marginRight="45dp"
			android:layout_marginTop="25dp"
			android:textSize="@dimen/f36sp"
			android:textColor="@color/red"
			android:gravity="center"
			android:lineSpacingExtra="@dimen/h10dip"
			android:text=""/>

		<TextView
			android:id="@+id/tv_dialog_common_customer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="25dp"
			android:layout_marginTop="15dp"
			android:textSize="@dimen/f36sp"
			android:textColor="#666666"
			android:lineSpacingExtra="@dimen/h10dip"
			android:text=""/>


		<!--内容-->
		<TextView
			android:id="@+id/tv_dialog_common_context"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="45dp"
			android:layout_marginRight="45dp"
			android:layout_marginTop="15dp"
			android:textSize="@dimen/f36sp"
			android:textColor="#666666"
			android:gravity="center"
			android:lineSpacingExtra="@dimen/h10dip"
			android:text=""/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="25dp"
			android:layout_marginTop="15dp"
			android:textSize="15sp"
			android:visibility="gone"
			android:textColor="#FF00FF"
			android:lineSpacingExtra="@dimen/h10dip"
			android:text="如图："/>

		<ImageView
			android:id="@+id/signImage"
			android:layout_width="200dp"
			android:layout_height="50dp"
			android:layout_gravity="center"
			android:visibility="gone"
			android:background="@drawable/bg_image_border"/>
		<!--确定-->
		<TextView
			android:id="@+id/tv_dialog_common_go"
			android:layout_width="match_parent"
			android:layout_height="@dimen/w100dip"
			android:layout_marginLeft="45dp"
			android:layout_marginRight="45dp"
			android:layout_marginTop="30dp"
			android:text=""
			android:gravity="center"
			android:textSize="@dimen/f36sp"
			android:textColor="@color/white"
			android:background="@drawable/bg_a82626_corners_50"
			android:lineSpacingExtra="@dimen/h10dip"/>
	</LinearLayout>
	<!--@c关闭-->
	<TextView
		android:id="@+id/tv_dialog_common_close"
		android:layout_width="@dimen/h70dip"
		android:layout_height="@dimen/h70dip"
		android:background="@drawable/login_dialog_close"
		android:layout_toRightOf="@+id/ll_common_dialog"
		android:layout_alignTop="@+id/ll_common_dialog"
		android:layout_marginLeft="-15dp"
		android:layout_marginTop="-15dp"/>
</RelativeLayout>